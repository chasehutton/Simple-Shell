#if !defined(SCANNER_H)
#define SCANNER_H
#endif 

typedef enum {
   // Single-character tokens.
  TOKEN_LEFT_PAREN, TOKEN_RIGHT_PAREN,
  TOKEN_LEFT_BRACE, TOKEN_RIGHT_BRACE,
  TOKEN_COMMA, TOKEN_DOT, TOKEN_MINUS, TOKEN_PLUS,
  TOKEN_SEMICOLON, TOKEN_SLASH, TOKEN_STAR, TOKEN_AND,

  // Operator tokens
  TOKEN_PIPE, TOKEN_LAND, TOKEN_LOR,

  // Literals
  TOKEN_STRING,

  TOKEN_EOF, TOKEN_ERROR
} TokenType;

typedef struct {
  TokenType type;
  const char *start;
  int length;
} Token;

void init_scanner(const char *);
Token scan_token();
